{
  "name": "getdns",
  "version": "1.0.0",
  "description": "getdns bindings for Node.js. Requires getdns 1.0.0 or above.",
  "main": "getdns.js",
  "keywords": [
    "dns",
    "getdns"
  ],
  "gypfile": true,
  "author": {
    "name": "Neel Goyal and maintained since 0.5.0 by Gowri Visweswaran"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/getdnsapi/getdns-node.git"
  },
  "dependencies": {
    "bindings": "^1.2.1",
    "nan": "^2.4.0"
  },
  "devDependencies": {
    "async": "^1.2.0",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "expect.js": "^0.3.1",
    "mocha": "^2.2.5",
    "pre-commit": "^1.2.2",
    "segfault-handler": "^1.0.0"
  },
  "engines": {
    "node": "^4.0.0 || ^6.0.0 || ^7.0.0",
    "npm": "^2.0.0 || ^3.0.0 || ^4.0.0"
  },
  "scripts": {
    "postinstall": "node-gyp clean rebuild",
    "test": "mocha && npm run --silent lint",
    "lint": "npm run --silent eslint --",
    "eslint": "eslint ./src ./test ./samples getdns.js",
    "eslint:fix": "eslint --fix ./src ./test ./samples getdns.js"
  }
}
